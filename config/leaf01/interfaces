
# /etc/network/interfaces template for switches (leaf01)
# Created by Ansible

auto lo
iface lo inet loopback
  clagd-vxlan-anycast-ip 10.0.0.112
  address 10.0.0.11/32

auto eth0
iface eth0 inet dhcp
   vrf mgmt


auto mgmt
iface mgmt
  address 127.0.0.1/8
  vrf-table auto





auto swp1
iface swp1

auto server01
iface server01
bond-slaves swp1
   bridge-access 10
  clag-id 1

auto swp2
iface swp2

auto server02
iface server02
bond-slaves swp2
   bridge-access 20
  clag-id 2


auto swp49
iface swp49
  mtu 9216
auto swp50
iface swp50
  mtu 9216

auto peerlink
iface peerlink
bond-slaves swp49 swp50
  mtu 9216


auto peerlink.4094
iface peerlink.4094
  clagd-enable yes
  address 169.254.255.1/30
  clagd-peer-ip 169.254.255.2
  clagd-backup-ip 192.168.0.12 vrf mgmt
  clagd-sys-mac 44:39:39:FF:40:94
  alias Leaf01-Leaf02 MLAG peerlink


auto bridge
iface bridge
  bridge-vlan-aware yes
  bridge-ports server01 server02 regex vni.*  peerlink 
  bridge-vids 10 20
  bridge-pvid 1
  mstpctl-treeprio 8192


auto vni-1010
iface vni-1010
    vxlan-id 1010
    bridge-access 10
    vxlan-local-tunnelip 10.0.0.11
    mstpctl-bpduguard yes
    mstpctl-portbpdufilter yes
    bridge-learning off
auto vni-1020
iface vni-1020
    vxlan-id 1020
    bridge-access 20
    vxlan-local-tunnelip 10.0.0.11
    mstpctl-bpduguard yes
    mstpctl-portbpdufilter yes
    bridge-learning off
auto swp51
iface swp51
    mtu 9216
auto swp52
iface swp52
    mtu 9216
